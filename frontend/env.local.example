# Market Data API Keys
# Get these from the respective services

# Financial Modeling Prep API (for stock market data)
NEXT_PUBLIC_FMP_API_KEY=your_fmp_api_key_here

# Alpha Vantage API (for commodity and bond data)
NEXT_PUBLIC_ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Finnhub API (for real-time stock quotes and market data)
NEXT_PUBLIC_FINNHUB_API_KEY=your_finnhub_api_key_here

# Polygon.io API (for comprehensive stock and options data)
NEXT_PUBLIC_POLYGON_API_KEY=your_polygon_api_key_here

# Optional: CoinGecko API (free tier available)
# CoinGecko doesn't require an API key for basic usage

# Optional: DeFi Llama API (free, no key required)
# DeFi Llama is free and doesn't require authentication

# Optional: Alternative.me Fear & Greed Index (free, no key required)
# This service is free and doesn't require authentication

# WebSocket Configuration
NEXT_PUBLIC_WEBSOCKET_ENABLED=true
NEXT_PUBLIC_WEBSOCKET_RECONNECT_INTERVAL=5000
NEXT_PUBLIC_HTTP_FALLBACK_INTERVAL=15000

# Stock Quote Configuration
NEXT_PUBLIC_STOCK_REFRESH_INTERVAL=30000
NEXT_PUBLIC_MAX_STOCKS_DISPLAY=20

# Polygon API Configuration
NEXT_PUBLIC_POLYGON_TIMEOUT=10000
NEXT_PUBLIC_POLYGON_MAX_RESULTS=1000

# Feature Flags
NEXT_PUBLIC_ENABLE_REAL_TIME_DATA=true
NEXT_PUBLIC_ENABLE_MOCK_DATA=true
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
NEXT_PUBLIC_ENABLE_FINNHUB_INTEGRATION=true
NEXT_PUBLIC_ENABLE_POLYGON_INTEGRATION=true 