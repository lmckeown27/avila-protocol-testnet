{
  "name": "avila-markets-backend",
  "version": "1.0.0",
  "description": "Market data aggregation service for TradFi and DeFi markets - fetches from 10+ free APIs with enhanced caching and watchlist support",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "build:clean": "rm -rf dist && tsc",
    "build:debug": "tsc --listFiles",
    "build:verify": "npm run build && ls -la dist/ && echo 'Build verification complete'",
    "postinstall": "echo 'Post-install complete' && npm run verify",
    "test": "ts-node test_marketData.ts",
    "lint": "eslint . --ext .ts",
    "verify": "node -e \"console.log('Node.js working'); console.log('Current directory:', process.cwd()); console.log('Files:', require('fs').readdirSync('.'))\"",
    "prebuild": "echo 'Starting build process...'",
    "postbuild": "echo 'Build complete. Checking output...' && ls -la dist/ && echo 'Build verification complete'",
    "render:build": "npm ci --only=production && npm run build:clean",
    "render:start": "npm start"
  },
  "keywords": [
    "market-data",
    "tradfi",
    "defi",
    "crypto",
    "stock-market",
    "watchlist",
    "api-integration",
    "real-time-data",
    "caching",
    "financial-analytics"
  ],
  "author": "Avila Protocol Team",
  "license": "MIT",
  "dependencies": {
    "@aptos-labs/ts-sdk": "^4.0.0",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.0",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "tsx": "^4.20.4",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
