{
  "name": "avila-markets",
  "version": "1.0.0",
  "description": "A comprehensive market monitoring platform for TradFi and DeFi markets with watchlist capabilities",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "start": "cd backend && npm install && npm run start",
    "build:contracts": "cd backend/smart-contracts && aptos move compile",
    "test:contracts": "cd backend/smart-contracts && aptos move test",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build": "npm run build:contracts && npm run build:backend && npm run build:frontend",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "deploy:testnet": "cd backend && npm run deploy:testnet",
    "deploy:mainnet": "cd backend && npm run deploy:mainnet",
    "initialize": "cd backend && npm run initialize",
    "verify": "cd backend && npm run verify",
    "lint": "cd backend/smart-contracts && aptos move check",
    "clean": "cd backend/smart-contracts && aptos move clean",
    "format": "cd backend/smart-contracts && aptos move format",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install"
  },
  "keywords": [
    "market-monitoring",
    "tradfi",
    "defi",
    "cryptocurrency",
    "stock-market",
    "watchlist",
    "real-time-data",
    "financial-analytics"
  ],
  "author": "Avila Protocol Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/avila-protocol/avila-contracts.git"
  },
  "bugs": {
    "url": "https://github.com/avila-protocol/avila-contracts/issues"
  },
  "homepage": "https://github.com/avila-protocol/avila-contracts#readme"
} 